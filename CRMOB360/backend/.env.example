# Backend Environment Variables - CRMOB360

# Node Environment
NODE_ENV=development
PORT=3001

# Database Configuration
DATABASE_URL=postgresql://postgres:postgres123@localhost:5432/imobiliaria360

# Redis Configuration
REDIS_URL=redis://localhost:6379
REDIS_PASSWORD=

# JWT Configuration
JWT_SECRET=your-super-secret-jwt-key-change-this-in-production-minimum-32-characters
JWT_EXPIRES_IN=1h
JWT_REFRESH_SECRET=your-super-secret-refresh-token-key-change-this-in-production
JWT_REFRESH_EXPIRES_IN=7d

# Kafka Configuration
KAFKA_BROKERS=localhost:9092
KAFKA_CLIENT_ID=imobiliaria360-backend
KAFKA_GROUP_ID=imobiliaria360-group

# Email Configuration (SMTP)
SMTP_HOST=smtp.gmail.com
SMTP_PORT=587
SMTP_SECURE=false
SMTP_USER=your-email@gmail.com
SMTP_PASSWORD=your-email-password
SMTP_FROM_NAME=Imobiliária 360
SMTP_FROM_EMAIL=noreply@imobiliaria360.com

# WhatsApp Integration
WHATSAPP_API_URL=https://api.whatsapp.com
WHATSAPP_API_TOKEN=your-whatsapp-api-token
WHATSAPP_PHONE_NUMBER_ID=your-phone-number-id

# Payment Gateway
PAYMENT_GATEWAY_PROVIDER=asaas
PAYMENT_GATEWAY_API_KEY=your-payment-gateway-api-key
PAYMENT_GATEWAY_API_URL=https://sandbox.asaas.com/api/v3

# Portal Integration (Viva Real, Zap Imóveis)
VIVA_REAL_API_KEY=your-viva-real-api-key
ZAP_IMOVEIS_API_KEY=your-zap-imoveis-api-key

# AI/ML Configuration
OPENAI_API_KEY=your-openai-api-key
AI_MODEL=gpt-4

# File Upload Configuration
UPLOAD_DIR=./uploads
MAX_FILE_SIZE=10485760
ALLOWED_FILE_TYPES=image/jpeg,image/png,image/webp,application/pdf

# Client Portal Configuration
CLIENT_PORTAL_URL=http://localhost:3000/portal-cliente
OWNER_PORTAL_URL=http://localhost:3000/portal-proprietario

# Security
BCRYPT_ROUNDS=10
RATE_LIMIT_WINDOW_MS=900000
RATE_LIMIT_MAX_REQUESTS=100

# Logging
LOG_LEVEL=debug
LOG_FILE=./logs/app.log

# CORS
CORS_ORIGIN=http://localhost:3000,http://localhost:3001

# Session
SESSION_SECRET=your-session-secret-key-change-this
